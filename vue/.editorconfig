root = true
# 表示所有文件适用
[*]
# 设置文件字符集为 uft-8
charset = utf-8
# 缩进风格 (tab | space)
indent_style = tab
# 缩进大小
indent_size = 2
# 控制换行类型(lf | cr | crlf)
trim_trailing_whitespace = true
# 始终在文件末尾插入一个新行
insert_final_newline = true

# 表示 md 文件使用以下规则
[*.md] 
max_line_length = off
trim_trailing_whitespace = false
